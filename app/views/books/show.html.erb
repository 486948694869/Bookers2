
<div class="container">
  <%= notice %>
  <div class="row">

    <div class="col-md-3">

      <%= render 'users/user' , user: @user %>
      <%= render 'books/book' , book: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class='table'>
          <tbody>
            <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
            <br><%= @book.user.name %></br>
            <% end %>
            </td>
            <td>
              <%= link_to @book.title , book_path(@book), class:"book_#{@book.id}" %>
            </td>
            <td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
            <td>
              <%= link_to 'Edit', edit_book_path,class: "btn btn-success"  %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book),class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
            </td>
             <% end %>
          </body>
        </table>
    </div>

  </div>
</div>
